{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $PLUGIN_DIR/hooks/save_user_message.py",
            "description": "Capture user message and queue for async API sync"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $PLUGIN_DIR/hooks/save_assistant_message.py",
            "description": "Capture assistant message with tool calls and queue for async API sync"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode|AskUserQuestion|SlashCommand|Skill",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $PLUGIN_DIR/hooks/save_tool_call_attempt.py",
            "description": "Capture tool call attempt for high-level workflow tracking"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $PLUGIN_DIR/hooks/save_bash_result.py",
            "description": "Capture Bash command execution results with stdout/stderr"
          }
        ]
      }
    ]
  }
}
